{
  "name": "worldle-mono",
  "version": "1.0.0",
  "description": "Monorepo for Worldle",
  "main": "packages/wordle-be/dist/index.js",
  "type": "module",
  "scripts": {
    "dev:fe": "cd packages/wordle-fe && vite",
    "build:fe": "cd packages/wordle-fe && tsc && vite build",
    "start:fe": "cd packages/wordle-fe && vite preview --host 0.0.0.0 --port ${PORT:-8080}",
    "dev:be": "cd packages/wordle-be && nodemon --exec tsx server.ts",
    "build:be": "cd packages/wordle-be && tsc",
    "start:be": "cd packages/wordle-be && node dist/index.js",
    "build": "npm run build:be && npm run build:fe",
    "start": "npm run start:be",
    "lint": "tsc --build"
  },
  "keywords": [
    "wordle",
    "game",
    "monorepo"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "node": ">=22.0.0",
    "socket.io-client": "^4.8.1",
    "express": "^4.18.2",
    "socket.io": "^4.8.1",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.0.11",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.3",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "tsc-watch": "^6.0.4",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@types/morgan": "^1.9.10",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.1"
  }
}
