{
  // "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "noEmit": false,
    "esModuleInterop": true,
    "strict": false,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@types": ["../../types/index"],
      "@types/*": ["../../types/*"]
    }
  },
  "include": ["**/*.ts", "../../types"],
  "exclude": ["node_modules", "dist"]
}
